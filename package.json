{
  "name": "junit-reporting-examples",
  "version": "1.0.0",
  "description": "A Node.js project with comprehensive tests for testing JUnit reporting tools",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:junit": "jest --reporters=default --reporters=jest-junit",
    "test:ci": "jest --ci --coverage --reporters=default --reporters=jest-junit",
    "test:playwright": "playwright test",
    "test:playwright:ui": "playwright test --ui",
    "test:playwright:headed": "playwright test --headed",
    "test:playwright:debug": "playwright test --debug",
    "test:all": "npm run test:ci && npm run test:playwright",
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "playwright:install": "playwright install"
  },
  "keywords": [
    "junit",
    "testing",
    "reporting",
    "node",
    "jest"
  ],
  "author": "Test Author",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.5",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.0.1",
    "playwright": "^1.54.2",
    "supertest": "^6.3.3"
  },
  "dependencies": {
    "express": "^4.18.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4"
  }
}
